{
	"compilerOptions": {
		"baseUrl": "packages",
		"outDir": "lib",
		"module": "commonjs",
		"target": "es6",
		"lib": ["es6", "es2015", "dom"],
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"declaration": true,
		"declarationMap": true,
		"strict": true,
		"strictNullChecks": true,
		"importHelpers": true,
		"downlevelIteration": true,
		"paths": {
			"*": ["@types/*"],
			"@lamington/api": ["packages/api/*"],
			"@lamington/cli": ["packages/cli/*"],
			"@lamington/common": ["packages/common/*"],
			"@lamington/core": ["packages/core/*"],
			"@lamington/docker": ["packages/docker"],
			"@lamington/interfaces": ["packages/interfaces/*"]
		},
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"typeRoots": ["node_modules/@types", "@types"]
	},
	"include": ["**/*"],
	"exclude": ["**/lib/**"]
}
