{
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./out",
		"target": "es2017",
		"lib": ["es2017", "dom"],
		"module": "commonjs",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"declaration": true,
		"declarationMap": true,
		"strict": true,
		"strictNullChecks": true,
		"importHelpers": true,
		"paths": {
			"*": ["@types/*"]
		},
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"typeRoots": ["node_modules/@types", "@types"]
	},
	"include": ["**/*", "./**/*.d.ts"],
	"exclude": ["**/dist/**", "**/out/**", "**/lib/**"]
}
