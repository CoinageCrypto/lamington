{
	"name": "lamington",
	"description": "A suite of tools to make building and testing EOS smart contracts easier.",
	"private": true,
	"main": "out/index.js",
	"types": "out/index.d.ts",
	"files": [
		"out/**"
	],
	"scripts": {
		"build": "yarn clean; tsc",
		"clean": "rm -rf ./out; lerna run clean",
		"clean:link": "yarn unlink; rm -rf ~/.config/yarn/link/lamington",
		"docs": "lerna run docs",
		"format": "lerna run prettier",
		"lint": "",
		"publish:dev": "yalc publish --private"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CoinageCrypto/lamington.git"
	},
	"bin": {
		"lamington": "packages/all/lib"
	},
	"keywords": [
		"EOS",
		"EOS.io",
		"Smart Contract",
		"C++",
		"wasm",
		"Typescript",
		"Truffle",
		"Compile",
		"Deployment",
		"Testing",
		"Unit Testing",
		"Mocha",
		"Lerna"
	],
	"author": {
		"name": "Coinage Crypto",
		"url": "https://coina.ge/",
		"email": "hello@coina.ge"
	},
	"contributors": [
		{
			"name": "Kevin Brown",
			"email": "kevin.brown@coina.ge",
			"url": "https://github.com/thekevinbrown"
		},
		{
			"name": "Mitch Pierias",
			"email": "mitch@pierias.com",
			"url": "https://github.com/MitchPierias"
		}
	],
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/CoinageCrypto/lamington/issues"
	},
	"homepage": "https://github.com/CoinageCrypto/lamington#readme",
	"devDependencies": {
		"lerna": "^3.16.4",
		"prettier": "1.18.2",
		"typescript": "3.5.2",
		"yalc": "^1.0.0-pre.34"
	},
	"dependencies": {
		"chai": "^4.2.0"
	},
	"useWorkspaces": true,
	"workspaces": [
		"packages/**"
	]
