{
	"name": "lamington",
	"version": "1.0.0-alpha.4",
	"description": "Compile and test library for EOSIO Smart Contracts.",
	"main": "lib/index.js",
	"private": true,
	"scripts": {
		"go": "node ./packages/common/runner/main.js",
		"build": "yarn clean; yarn; tsc; yarn run copy:scripts",
		"copy:scripts": "cp -r ./packages/cli/scripts/ ./lib/cli/scripts/",
		"link": "lerna run link",
		"clean": "rm -rf ./lib; lerna clean --yes",
		"clean:link": "yarn unlink && yalc remove && rm -rf ~/.config/yarn/link/lamington",
		"docs": "lerna run docs",
		"format": "lerna run prettier",
		"lint": "",
		"publish": "",
		"publish:local": "yarn clean:link; yalc publish --private"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CoinageCrypto/lamington.git"
	},
	"bin": {
		"lamington": "lib/cli/index.js"
	},
	"files": [
		"lib/**/*"
	],
	"keywords": [
		"EOS",
		"EOS.io",
		"EOSIO",
		"Smart Contract",
		"C++",
		"wasm",
		"Typescript",
		"Truffle",
		"Unit Testing",
		"Mocha",
		"Lerna"
	],
	"author": {
		"name": "Coinage Crypto",
		"url": "https://coina.ge/",
		"email": "hello@coina.ge"
	},
	"contributors": [
		{
			"name": "Kevin Brown",
			"email": "kevin.brown@coina.ge",
			"url": "https://github.com/thekevinbrown"
		},
		{
			"name": "Mitch Pierias",
			"email": "mitch@pierias.com",
			"url": "https://github.com/MitchPierias"
		}
	],
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/CoinageCrypto/lamington/issues"
	},
	"homepage": "https://github.com/CoinageCrypto/lamington#readme",
	"devDependencies": {
		"awesome-typescript-loader": "^5.2.1",
		"lerna": "^3.16.4",
		"path": "^0.12.7",
		"prettier": "1.18.2",
		"typescript": "3.5.2",
		"webpack": "^4.41.0",
		"yalc": "^1.0.0-pre.34"
	},
	"dependencies": {
		"chai": "^4.2.0"
	},
	"workspaces": [
		"packages/*"
	]
}
